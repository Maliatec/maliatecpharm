<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update MedFriend Information"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:id="@+id/layout_first_name"
        android:layout_width="match_parent"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:text="First name"
        android:gravity="center"
        android:textStyle="bold"
        android:textColorHint="#808080"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/edittext_firstNameEmergencyContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:background="#00000000"
        android:textSize="15sp">

    </EditText>

    <TextView
        android:id="@+id/layout_last_name"
        android:layout_width="match_parent"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:text="Last name"
        android:gravity="center"
        android:textStyle="bold"
        android:textColorHint="#808080"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/edittext_lastNameEmergencyContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:background="#00000000"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_genderEmergencyContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="Gender"
            android:textColorHint="#808080"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_lastName"
            app:layout_constraintWidth_percent="0.7" />

        <Spinner
            android:id="@+id/spinner_genderSpinnerEmergencyContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_phoneNbr"
        android:layout_width="match_parent"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:text="Phone number"
        android:gravity="center"
        android:textStyle="bold"
        android:textColorHint="#808080"
        android:textSize="16sp"
        />

        <EditText
            android:id="@+id/edittext_phoneEmergencyContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="Phone number"
            android:inputType="number"
            android:drawableLeft="@drawable/mobile"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:background="#00000000"
            android:textSize="15sp" />

    <TextView
        android:id="@+id/textview_mail"
        android:layout_width="match_parent"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:text="Phone number"
        android:gravity="center"
        android:textStyle="bold"
        android:textColorHint="#808080"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/edittext_emailEmergencyContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/email"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:background="#00000000"
        android:textSize="15sp"/>



    <Button
        android:id="@+id/button_saveButtonEmergencyContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:text="Save Emergency Contact Profile"

        />


</LinearLayout>