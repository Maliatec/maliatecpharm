<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.maliatecpharm.activity.mainmenu.fragments.FragmentHome"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/MedicationsFragment"
        android:name="com.maliatecpharm.activity.mainmenu.fragments.FragmentListMedication"
        android:label="Add Medications"
        tools:layout="@layout/fragment_medication_list">
        <action
            android:id="@+id/action_MedicationsFragment_to_addMedicationFragment"
            app:destination="@id/addMedicationFragment" />
    </fragment>

    <fragment
        android:id="@+id/fragmentListDoctors"
        android:name="com.maliatecpharm.activity.mainmenu.fragments.FragmentListDoctors"
        android:label="List Doctors">
        <action
            android:id="@+id/action_fragmentListDoctors_to_fragmentAddDoctors"
            app:destination="@id/fragmentAddDoctors" />
    </fragment>

    <fragment
        android:id="@+id/fragmentAddDoctors"
        android:name="com.maliatecpharm.activity.mainmenu.fragments.FragmentAddDoctor"
        android:label="Add Doctors"/>


    <fragment
        android:id="@+id/MoreFragment"
        android:name="com.maliatecpharm.activity.mainmenu.fragments.FragmentMore"
        android:label="More"
        tools:layout="@layout/fragment_more" />

    <fragment
        android:id="@+id/vitalSignsFragment"
        android:name="com.maliatecpharm.activity.mainmenu.fragments.FragmentVitalSigns"
        android:label="My vital signs"
        tools:layout="@layout/fragment_vitalsigns" >
        <action
            android:id="@+id/action_vitalSignsFragment_to_addVitalSignsFragment"
            app:destination="@id/addVitalSignsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addVitalSignsFragment"
        android:name="com.maliatecpharm.activity.mainmenu.fragments.FragmentAddVitalSigns"
        android:label="Add Vital Signs"
        tools:layout="@layout/fragment_vital_signs" />

    <fragment
        android:id="@+id/addMedicationFragment"
        android:name="com.maliatecpharm.activity.mainmenu.fragments.Fragment_Add_Medication"
        android:label="fragment_add_medication"
        tools:layout="@layout/fragment_add_medication" />



</navigation>