<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ThirdFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.maliatecpharm.activity.mainmenu.FirstFragment"
        android:label="Add Medication"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />

    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.maliatecpharm.activity.mainmenu.SecondFragment"
        android:label="Medications"
        tools:layout="@layout/fragment_second">
               <action
                   android:id="@+id/action_SecondFragment_to_ThirdFragment"
                   app:destination="@id/ThirdFragment" />

    </fragment>
    <fragment
        android:id="@+id/ThirdFragment"
        android:name="com.maliatecpharm.ThirdFragment"
        android:label="Personal Info"
        tools:layout="@layout/fragment_third">
               <action
                   android:id="@+id/action_ThirdFragment_to_FirstFragment"
                   app:destination="@id/FirstFragment" />
    </fragment>


</navigation>